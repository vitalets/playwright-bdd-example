{
  "name": "playwright-bdd-example",
  "version": "0.1.0",
  "scripts": {
    "test": "npx bddgen && npx playwright test",
    "report": "npx http-server ./cucumber-report -c-1 -a localhost -o index.html",
    "watch:bdd": "nodemon -w ./features -e feature,js,ts --exec \"npx bddgen\"",
    "watch:pw": "playwright test --ui",
    "watch": "run-p watch:*"
  },
  "devDependencies": {
    "@chromatic-com/playwright": "^0.11.2",
    "@playwright/test": "^1.50.0",
    "@types/node": "^20.9.4",
    "chromatic": "^11.25.2",
    "http-server": "14.1.1",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^8.2.0",
    "prettier": "3.4.2",
    "prettier-plugin-gherkin": "^3.1.1",
    "typescript": "^5.7.2"
  },
  "license": "MIT"
}
