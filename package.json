{
  "name": "playwright-bdd-example",
  "version": "0.1.0",
  "packageManager": "yarn@4.6.0",
  "scripts": {
    "test": "yarn bddgen && yarn playwright test",
    "watch:bdd": "nodemon -w ./features -w ./steps -e feature,js,ts --exec \"yarn bddgen\"",
    "watch:pw": "yarn playwright test --ui",
    "watch": "run-p 'watch:*'",
    "report": "yarn dlx http-server ./cucumber-report -c-1 -o index.html"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^20.9.4",
    "http-server": "14.1.1",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^8.1.0",
    "prettier": "3.4.2",
    "prettier-plugin-gherkin": "^3.1.1",
    "typescript": "^5.7.2"
  },
  "license": "MIT"
}
